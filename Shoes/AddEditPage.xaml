<Page x:Class="Shoes.AddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shoes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="170"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Добавляем поле для артикула -->
        <TextBlock Text="Артикул" FontSize="15" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
        <TextBox Text="{Binding article}" Grid.Column="1" Grid.Row="0" Height="30" Name="ArticleTextBox" IsReadOnly="True"></TextBox>

        <TextBlock Text="Навзвание" FontSize="15" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
        <TextBlock Text="Категория" FontSize="15" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
        <TextBlock Text="Описание" FontSize="15" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
        <TextBlock Text="Производитель" FontSize="15" Grid.Column="0" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
        <TextBlock Text="Поставщик" FontSize="15" Grid.Column="0" Grid.Row="5" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
        <TextBlock Text="Цена" FontSize="15" Grid.Column="0" Grid.Row="6" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
        <TextBlock Text="Еденица измерения" FontSize="15" Grid.Column="0" Grid.Row="7" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
        <TextBlock Text="Количество на складе" FontSize="15" Grid.Column="0" Grid.Row="8" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
        <TextBlock Text="Скидка" FontSize="15" Grid.Column="0" Grid.Row="9" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>

        <TextBox Text="{Binding product_name}" Grid.Column="1" Grid.Row="1" Height="30"></TextBox>
        <ComboBox Text="{Binding Category1.name_category}" Grid.Column="1" Grid.Row="2" Name="ComboCategory" SelectionChanged="ComboCategory_SelectionChanged"  Height="30" Width="200" HorizontalAlignment="Left">
        </ComboBox>
        <TextBox Text="{Binding description}" Grid.Column="1" Grid.Row="3" Height="30"></TextBox>
        <ComboBox Text="{Binding manufacturer1.manufacturer_name}" Name="ComboManufacturer" SelectionChanged="ComboManufacturer_SelectionChanged" Grid.Column="1" Grid.Row="4" Height="30" Width="300" HorizontalAlignment="Left">
        </ComboBox>
        <TextBox Text="{Binding supplier}" Grid.Column="1" Grid.Row="5" Height="30"></TextBox>
        <TextBox Text="{Binding cost}" Grid.Column="1" Grid.Row="6" Height="30"></TextBox>
        <TextBox Text="{Binding unit}" Grid.Column="1" Grid.Row="7" Height="30" Width="200" HorizontalAlignment="Left" ></TextBox>
        <TextBox Text="{Binding quantityInStock}" Grid.Column="1" Grid.Row="8" Height="30" Width="200" HorizontalAlignment="Left"></TextBox>
        <TextBox Text="{Binding discount}" Grid.Column="1" Grid.Row="9" Height="30" Width="200" HorizontalAlignment="Left" ></TextBox>

        <Button Name="SaveButton" Content="Сохранить" Grid.Row="10" Grid.Column="1" Grid.ColumnSpan="2" Click="SaveButton_Click"></Button>

        <Image x:Name="LogoImage" Width="250" Height="165" Grid.Row="2" Grid.Column="2" VerticalAlignment="Top" Grid.RowSpan="4" Margin="33,0,32,0">
            <Image.Source>
                <Binding Path="image">
                    <Binding.TargetNullValue>
                        <ImageSource>image/picture.png</ImageSource>
                    </Binding.TargetNullValue>
                </Binding>
            </Image.Source>
        </Image>

        <Button Name="ChangePhotoButton" Content="Изменить фото"  Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="2"  HorizontalAlignment="Center" Click="ChangePhotoButton_Click" ></Button>
    </Grid>
</Page>