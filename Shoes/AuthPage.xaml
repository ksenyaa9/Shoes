<Page x:Class="Shoes.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shoes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage" FontFamily="Times New Roman">

    <Grid>
        <Grid.RowDefinitions>

            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="400"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Логин" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="25" Margin="10"></TextBlock>
        <TextBox Grid.Row="0" Grid.Column="1" Name="LoginTB" Width="200" HorizontalAlignment="Center" Height="30" Margin="5"></TextBox>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Пароль" FontSize="25" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"></TextBlock>
        <TextBox Grid.Row="1" Grid.Column="1" Name="PassTB" Width="200" Height="30" HorizontalAlignment="Center" Margin="5"></TextBox>

        <Button Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Content="Войти как гость" Name="welcome" Click="welcome_Click" Margin="50"></Button>
        <Button Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Name="LodinBtn" Click="LodinBtn_Click" Content="Войти" Margin="50"></Button>

        
    </Grid>
</Page>
