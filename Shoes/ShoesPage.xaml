<Page x:Class="Shoes.ShoesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shoes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShoesPage" FontFamily="Times New Roman" IsVisibleChanged="Page_IsVisibleChanged"> 

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Left">
            <TextBlock Text="Вы авторизованы как " Name="FIOTB" FontSize="18" ></TextBlock>
            <TextBlock Text="Роль: " Name="RoleTB" FontSize="18"></TextBlock>
        </StackPanel>


        <ListView Name="ShoesListView" Grid.Row="2">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Background="{Binding FonStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Text="{Binding Category1.name_category, StringFormat='{}{0} | '}" FontSize="24" TextWrapping="Wrap" Margin="0,0,3,0" />
                            <TextBlock Text="{Binding product_name}" FontSize="24" TextWrapping="Wrap" />
                        </StackPanel>
                        <TextBlock Text="{Binding description,StringFormat=Описание:{0}}" Grid.Column="1" Grid.Row="1" FontSize="20"></TextBlock>
                        <TextBlock Text="{Binding manufacturer1.manufacturer_name,StringFormat=Производитель:{0}}" Grid.Column="1" Grid.Row="2" FontSize="20"></TextBlock>
                        <TextBlock Text="{Binding supplier, StringFormat=Поставщик:{0}}" Grid.Column="1" Grid.Row="3" FontSize="20"></TextBlock>
                        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="4">
                            <TextBlock Text="{Binding OldCost}" FontSize="20" TextDecorations="Strikethrough" Margin="5" Foreground="Red"/>
                            <TextBlock Text="{Binding NewCost}" FontSize="20" Margin="5" Foreground="Black"/>
                            <TextBlock Text="руб. " FontSize="20" Margin="5" Foreground="Black"/>
                        </StackPanel >
                       
                        <TextBlock Text="{Binding unit, StringFormat=Единица измерения:{0}}" Grid.Column="1" Grid.Row="5" FontSize="20"></TextBlock>
                        <TextBlock Text="{Binding quantityInStock, StringFormat=Количество на складе:{0}}" Grid.Column="1" Grid.Row="6" FontSize="20"></TextBlock>
                        <TextBlock Text="{Binding discount, StringFormat={}{0} % }" Opacity="{Binding discount}"  Grid.Column="2" Grid.RowSpan="2" Margin="5" Grid.Row="2" HorizontalAlignment="Right" FontSize="21"></TextBlock>
                        
                        
                        <Image Width="250" Grid.Column="0" Grid.Row="0" Grid.RowSpan="8" Stretch="UniformToFill" HorizontalAlignment="Center" Margin="5">
                            <Image.Source>
                                <Binding Path="image">
                                    <Binding.TargetNullValue>
                                        <ImageSource>
                                            image/picture.png
                                        </ImageSource>
                                    
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source> 
                        </Image>

                        <StackPanel Grid.Column="1" Grid.Row="7" Orientation="Horizontal">
                            <Button Name="EditButton" Content="редактировать" Margin="2" Click="EditButton_Click"></Button>
                            <Button Name="DeleteButton" Click="DeleteButton_Click" Content="удалить" Margin="2"></Button>
                        </StackPanel>


                    </Grid>

                </DataTemplate>
            </ListView.ItemTemplate>
            
        </ListView>

        <WrapPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Name="WrapPanel">
            <StackPanel Margin="10" Orientation="Horizontal">
                <TextBlock Text="Введите для поиска" TextAlignment="Right" Width="300" FontSize="20"></TextBlock>
                <TextBox Name="TBoxSearch" TextChanged="TBoxSearch_TextChanged" Width="300" FontSize="15"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Выберите поставщика" TextAlignment="Right" Width="300" FontSize="20"></TextBlock>
                <ComboBox Name="ComboType" SelectionChanged="ComboType_SelectionChanged" FontSize="15" Width="200">
                    <TextBlock>Все поставщики</TextBlock>
                    <TextBlock>Kari</TextBlock>
                    <TextBlock>Обувь для вас</TextBlock>

                </ComboBox>
            </StackPanel>


            <StackPanel Orientation="Vertical" Margin="5">
                <RadioButton Content="По возрастанию количества" GroupName="Sort" Width="300" FontSize="20" Name="RBUp" Checked="RBUp_Checked"></RadioButton>
                <RadioButton Content="По убыванию количества" GroupName="Sort" Width="300" FontSize="20" Name="RBDown" Checked="RBDown_Checked"></RadioButton>
            </StackPanel>

        </WrapPanel>

        <Button Content="Добавить" Name="AddButton" Click="AddButton_Click" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom"></Button>
        
        

        

    </Grid>
</Page>
